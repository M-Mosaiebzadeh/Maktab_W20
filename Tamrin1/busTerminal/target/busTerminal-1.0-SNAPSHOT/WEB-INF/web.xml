<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>SearchTicket</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.SearchTicket</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SearchTicket</servlet-name>
        <url-pattern>/searchTicket</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>SearchTicketFilter</filter-name>
        <filter-class>ir.maktab.busTerminal.filters.SearchTicketFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SearchTicketFilter</filter-name>
        <url-pattern>/searchTicket</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signUp</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>SignUpFilter</filter-name>
        <filter-class>ir.maktab.busTerminal.filters.SignUpFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SignUpFilter</filter-name>
        <url-pattern>/signUp</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>FinalConfirm</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.FinalConfirm</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FinalConfirm</servlet-name>
        <url-pattern>/finalConfirm</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ShowUserTicket</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.ShowUserTicket</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ShowUserTicket</servlet-name>
        <url-pattern>/showUserTicket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FullDetailTicket</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.FullDetailTicket</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FullDetailTicket</servlet-name>
        <url-pattern>/fullDetailTicket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CancelTicket</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.CancelTicket</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CancelTicket</servlet-name>
        <url-pattern>/cancelTicket</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>CancelTicketFilter</filter-name>
        <filter-class>ir.maktab.busTerminal.filters.CancelTicketFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CancelTicketFilter</filter-name>
        <url-pattern>/cancelTicket</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>SignOut</servlet-name>
        <servlet-class>ir.maktab.busTerminal.servlets.SignOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignOut</servlet-name>
        <url-pattern>/signOut</url-pattern>
    </servlet-mapping>

</web-app>